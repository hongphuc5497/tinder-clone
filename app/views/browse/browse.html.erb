<div class="row">
  <div class="col-3 col-md-4 bg-white">
    <ul class="nav nav-pills mb-3 ml-4 mt-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Matches</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-profile" aria-selected="false">Messages</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-2 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>  
      </div>
      <div class="tab-pane ml-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <p>No messages to display.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-9 col-md-8">
    <ul id="slides">
      <% @users.each_with_index do |user, index| %>
        <div class="slide <%= 'showing' if index == 0 %>" data-id="<%= user.id %>">
          <div class="image-carousel" style="background-image: url('<%= url_for user.images.first if user.images.attached? %>')">
          </div>

          <div class="user-details">
              <span class="user-name"><%= user.username %></span>, <small>31</small><br/>
              <i class="fas fa-graduation-cap mr-1"></i>Job /Studies<br/>
              <i class="fas fa-map-marker mr-3"></i>Location
          </div>
        </div>
      <% end %>
    </ul>

    <div id="slide-controls">
      <span id="decline">
        <i class="fas fa-times-circle fa-3x"></i>
      </span>
      <span id="approve">
        <i class="fas fa-heart fa-3x"></i>
      </span>
    </div>
  </div>
</div>


