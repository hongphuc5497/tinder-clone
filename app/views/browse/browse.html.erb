<ul id="slides">
  <% @users.each do |user| %>
    <div class="slide" data-id="<%= user.id %>">
      <li><%= user.username %></li>
    </div>
  <% end %>
</ul>

<div id="slide-controls">
  <span id="decline">
    <i class="fas fa-times-circle fa-3x"></i>
  </span>
  <span id="approve">
    <i class="fas fa-heart fa-3x"></i>
  </span>
</div>